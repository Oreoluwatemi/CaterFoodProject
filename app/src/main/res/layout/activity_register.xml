<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.RegisterActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_0.3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_0.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.45"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.55"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_0.7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="horizontal"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.85"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/v_0.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATER FOODS"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/h_0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t_firstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FirstName"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="@id/h_0.1"
        app:layout_constraintBottom_toBottomOf="@id/h_0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_0.4"/>
    <EditText
        android:id="@+id/login_firstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:background="@drawable/edittext_custom"
        app:layout_constraintStart_toEndOf="@id/v_0.4"
        app:layout_constraintTop_toTopOf="@id/h_0.1"
        app:layout_constraintBottom_toBottomOf="@id/h_0.2"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/t_LastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LastName"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="@id/h_0.2"
        app:layout_constraintBottom_toBottomOf="@id/h_0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_0.4"/>
    <EditText
        android:id="@+id/login_lastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:background="@drawable/edittext_custom"
        app:layout_constraintStart_toEndOf="@id/v_0.4"
        app:layout_constraintTop_toTopOf="@id/h_0.2"
        app:layout_constraintBottom_toBottomOf="@id/h_0.3"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/t_phoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        android:textAlignment="textEnd"
        android:text="Phone Number"
        app:layout_constraintTop_toTopOf="@id/h_0.3"
        app:layout_constraintBottom_toBottomOf="@id/h_0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_0.4"/>
    <EditText
        android:id="@+id/login_phoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:background="@drawable/edittext_custom"
        app:layout_constraintStart_toEndOf="@id/v_0.4"
        app:layout_constraintTop_toTopOf="@id/h_0.3"
        app:layout_constraintBottom_toBottomOf="@id/h_0.4"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/t_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        android:textAlignment="textEnd"
        android:text="Email"
        app:layout_constraintTop_toTopOf="@id/h_0.4"
        app:layout_constraintBottom_toBottomOf="@id/h_0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_0.4"/>
    <EditText
        android:id="@+id/login_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:background="@drawable/edittext_custom"
        app:layout_constraintStart_toEndOf="@id/v_0.4"
        app:layout_constraintTop_toTopOf="@id/h_0.4"
        app:layout_constraintBottom_toBottomOf="@id/h_0.5"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/t_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        android:textAlignment="textEnd"
        android:text="Password"
        app:layout_constraintTop_toTopOf="@id/h_0.5"
        app:layout_constraintBottom_toBottomOf="@id/h_0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_0.4"/>
    <EditText
        android:id="@+id/login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:background="@drawable/edittext_custom"
        app:layout_constraintStart_toEndOf="@id/v_0.4"
        app:layout_constraintTop_toTopOf="@id/h_0.5"
        app:layout_constraintBottom_toBottomOf="@id/h_0.6"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/t_cpassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginRight="16dp"
        android:textAlignment="textEnd"
        android:text="Confirm Password"
        app:layout_constraintTop_toTopOf="@id/h_0.6"
        app:layout_constraintBottom_toBottomOf="@id/h_0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_0.4"/>
    <EditText
        android:id="@+id/login_cpassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:background="@drawable/edittext_custom"
        app:layout_constraintStart_toEndOf="@id/v_0.4"
        app:layout_constraintTop_toTopOf="@id/h_0.6"
        app:layout_constraintBottom_toBottomOf="@id/h_0.7"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        app:layout_constraintTop_toTopOf="@id/h_0.7"
        android:onClick="register"
        android:background="@drawable/button_custom"
        app:layout_constraintBottom_toBottomOf="@id/h_0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cancel"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintTop_toTopOf="@id/h_0.7"
        android:onClick="cancel"
        android:background="@drawable/button_custom"
        app:layout_constraintBottom_toBottomOf="@id/h_0.8"
        app:layout_constraintStart_toEndOf="@id/register"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>